{
  "trailingComma": "es5",
  "tabWidth": 4,
  "semi": false,
  "singleQuote": true,
  "overrides": [
    {
      "files": [
        "*.json",
        ".*rc"
      ],
      "options": {
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": [
        ".*scss",
        ".*sass",
        "*.css"
      ],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
